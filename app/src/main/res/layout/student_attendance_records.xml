<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_background"
    tools:context=".StudentAttendanceActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_header_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="20dp"
                    android:drawableStart="@drawable/ic_attendance_icon"
                    android:drawablePadding="8dp"
                    android:text="Attendance for Aravind"
                    android:textColor="@color/dark_blue_text"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_filter_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:drawableStart="@drawable/ic_filter"
                    android:drawablePadding="8dp"
                    android:text="Filter Attendance"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/spinner_subject"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:minHeight="40dp"
                        android:entries="@array/subjects_array"
                        android:prompt="@string/select_subject_prompt"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/rounded_dropdown_bg" />

                    <Spinner
                        android:id="@+id/spinner_date_range"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:minHeight="40dp"
                        android:entries="@array/date_ranges_array"
                        android:prompt="@string/select_date_range_prompt"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/rounded_dropdown_bg" />

                    <EditText
                        android:id="@+id/et_select_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:minHeight="40dp"
                        android:hint="16 - 10 - 2025"
                        android:textSize="14sp"
                        android:inputType="date"
                        android:drawableEnd="@drawable/ic_calendar"
                        android:background="@drawable/rounded_dropdown_bg"
                        android:padding="8dp" />

                </LinearLayout>

                <Button
                    android:id="@+id/btn_apply_filter"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginBottom="24dp"
                    android:text="Apply Filter"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    app:backgroundTint="@color/filter_blue"
                    app:cornerRadius="4dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:orientation="horizontal">

                    <include layout="@layout/summary_box"
                        android:id="@+id/box_total_days"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:backgroundTint="@color/summary_blue" />

                    <include layout="@layout/summary_box"
                        android:id="@+id/box_present"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:backgroundTint="@color/summary_green" />

                    <include layout="@layout/summary_box"
                        android:id="@+id/box_absent"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:backgroundTint="@color/summary_red_orange" />

                    <include layout="@layout/summary_box"
                        android:id="@+id/box_percentage"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:backgroundTint="@color/summary_purple" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_records_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:drawableStart="@drawable/ic_list_records"
                    android:drawablePadding="8dp"
                    android:text="Attendance Records"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/attendance_table_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/table_header_purple"
                    android:padding="8dp"
                    android:layout_marginBottom="2dp">
                    <TextView style="@style/TableHeaderText" android:layout_weight="1.5" android:text="Date" />
                    <TextView style="@style/TableHeaderText" android:layout_weight="2" android:text="Subject" />
                    <TextView style="@style/TableHeaderText" android:layout_weight="1.5" android:text="Status" android:gravity="end"/>
                </LinearLayout>

                <LinearLayout style="@style/TableRowStyle">
                    <TextView style="@style/TableRowText" android:layout_weight="1.5" android:text="10 - 10 - 2025" />
                    <TextView style="@style/TableRowText" android:layout_weight="2" android:text="Hindhi" />
                    <TextView style="@style/TableRowText" android:layout_weight="1.5" android:text="Absent ❌" android:textColor="@color/status_red" android:gravity="end"/>
                </LinearLayout>

                <LinearLayout style="@style/TableRowStyle">
                    <TextView style="@style/TableRowText" android:layout_weight="1.5" android:text="02 - 10 - 2025" />
                    <TextView style="@style/TableRowText" android:layout_weight="2" android:text="Data Structure" />
                    <TextView style="@style/TableRowText" android:layout_weight="1.5" android:text="Present ✅" android:textColor="@color/status_green" android:gravity="end"/>
                </LinearLayout>

                <LinearLayout style="@style/TableRowStyle">
                    <TextView style="@style/TableRowText" android:layout_weight="1.5" android:text="01 - 10 - 2025" />
                    <TextView style="@style/TableRowText" android:layout_weight="2" android:text="Software Engineering" />
                    <TextView style="@style/TableRowText" android:layout_weight="1.5" android:text="Absent ❌" android:textColor="@color/status_red" android:gravity="end"/>
                </LinearLayout>

                <Button
                    android:id="@+id/btn_back_to_home"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginTop="24dp"
                    android:text="Back to Home"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:backgroundTint="@android:color/white"
                    android:drawableStart="@drawable/ic_back_arrow_black"
                    app:cornerRadius="4dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    app:strokeColor="@color/gray_border"
                    app:strokeWidth="1dp" />

            </LinearLayout>

        </ScrollView>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>