<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7F73B8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center_horizontal">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="📊 Attendance for Aravind"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="20dp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🔍 Filter Attendance"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:layout_marginBottom="16dp">


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingEnd="8dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Select Subject"
                            android:textColor="#555555" />
                        <Spinner
                            android:id="@+id/spinner_subject"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:entries="@array/subject_options"
                            android:spinnerMode="dropdown" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Date Range"
                            android:textColor="#555555" />
                        <Spinner
                            android:id="@+id/spinner_date_range"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:entries="@array/date_range_options"
                            android:spinnerMode="dropdown" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="8dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Select Date"
                            android:textColor="#555555" />

                        <EditText
                            android:id="@+id/edit_text_date"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:drawableEnd="@android:drawable/ic_menu_today"
                            android:hint="27-10-2025"
                            android:inputType="none"
                            android:focusable="false"
                            android:clickable="true" />
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🟣 Apply Filter"
                    android:backgroundTint="#7A4EBE"
                    android:layout_marginBottom="24dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="4"
                    android:layout_marginBottom="24dp">


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="10dp"
                        android:layout_marginEnd="8dp"
                        android:background="#00BCD4">
                        <TextView
                            android:id="@+id/text_label_total_days"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Days"
                            android:textColor="@android:color/white"
                            android:textSize="14sp" />
                        <TextView
                            android:id="@+id/text_value_total_days"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10"
                            android:textColor="@android:color/white"
                            android:textSize="24sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Card 2: Present (Green Gradient) -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="10dp"
                        android:layout_marginEnd="8dp"
                        android:background="#4CAF50">
                        <TextView
                            android:id="@+id/text_label_present"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Present"
                            android:textColor="@android:color/white"
                            android:textSize="14sp" />
                        <TextView
                            android:id="@+id/text_value_present"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4"
                            android:textColor="@android:color/white"
                            android:textSize="24sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Card 3: Absent (Red/Orange Gradient) -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="10dp"
                        android:layout_marginEnd="8dp"
                        android:background="#FF9800">
                        <TextView
                            android:id="@+id/text_label_absent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Absent"
                            android:textColor="@android:color/white"
                            android:textSize="14sp" />
                        <TextView
                            android:id="@+id/text_value_absent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="6"
                            android:textColor="#FF5252"/>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="10dp"
                        android:background="#9C27B0">
                        <TextView
                            android:id="@+id/text_label_percentage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Percentage"
                            android:textColor="@android:color/white"
                            android:textSize="14sp" />
                        <TextView
                            android:id="@+id/text_value_percentage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="40.0%"
                            android:textColor="@android:color/white"
                            android:textSize="24sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="📋 Attendance Records"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="16dp" />


                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="*">


                    <TableRow
                        android:background="#7A4EBE"
                        android:padding="10dp">
                        <TextView
                            android:text="Date"
                            android:textStyle="bold"
                            android:textColor="@android:color/white" />
                        <TextView
                            android:text="Subject"
                            android:textStyle="bold"
                            android:textColor="@android:color/white" />
                        <TextView
                            android:text="Status"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            android:gravity="end" />
                    </TableRow>


                    <TableRow android:padding="10dp">
                        <TextView android:text="30-09-2025" />
                        <TextView android:text="Frontend Programming" />
                        <TextView android:text="Absent ❌" android:textColor="#FF0000" android:gravity="end" />
                    </TableRow>
                    <TableRow android:padding="10dp" android:background="#F5F5F5">
                        <TextView android:text="28-09-2025" />
                        <TextView android:text="Data Structure" />
                        <TextView android:text="Present ✅" android:textColor="#00AA00" android:gravity="end" />
                    </TableRow>
                    <TableRow android:padding="10dp">
                        <TextView android:text="22-09-2025" />
                        <TextView android:text="Maths" />
                        <TextView android:text="Absent ❌" android:textColor="#FF0000" android:gravity="end" />
                    </TableRow>

                </TableLayout>


                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🏠 Back to Home"
                    android:layout_marginTop="30dp"
                    android:backgroundTint="#EEEEEE"
                    android:textColor="#333333"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
