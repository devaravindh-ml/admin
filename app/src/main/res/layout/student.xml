<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".StudentDashboardActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="aravind@example.com"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn_student_status" />

        <TextView
            android:id="@+id/btn_student_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Student"
            android:textColor="@android:color/white"
            android:background="@drawable/rounded_blue_tag"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn_logout" />

        <Button
            android:id="@+id/btn_logout"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="Logout"
            android:textSize="12sp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:textColor="@android:color/white"
            app:backgroundTint="@color/red_logout"
            app:cornerRadius="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv_alert_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Please log in to access this page."
        android:textColor="@color/alert_text_red"
        android:background="@drawable/rounded_alert_bg"
        android:padding="10dp"
        android:gravity="center"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/header_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/iv_watermark"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:src="@drawable/logo_watermark"
        android:alpha="0.2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="Application Watermark" />

    <TextView
        android:id="@+id/tv_dashboard_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Class Performance Tracking System"
        android:textSize="20sp"
        android:textColor="@color/dark_blue_text"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="32dp"
        android:drawableStart="@drawable/ic_graduation_cap"
        android:drawablePadding="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_alert_message"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.2" />

    <TextView
        android:id="@+id/tv_welcome_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome Aravind! Access your records below"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_dashboard_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_welcome_message"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" >

        <Button
            android:id="@+id/btn_view_attendance"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:text="View My Attendance"
            android:textColor="@android:color/white"
            android:drawableStart="@drawable/ic_attendance_icon"
            app:backgroundTint="@color/dark_blue_button"
            app:cornerRadius="4dp"
            android:layout_marginBottom="12dp"
            android:paddingStart="20dp" />

        <Button
            android:id="@+id/btn_view_homework"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:text="View My Homework"
            android:textColor="@android:color/white"
            android:drawableStart="@drawable/ic_homework_icon"
            app:backgroundTint="@color/dark_blue_button"
            app:cornerRadius="4dp"
            android:paddingStart="20dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>